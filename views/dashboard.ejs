<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Skill Shastra - Dashboard</title>
  <meta name="description" content="Manage your Skill Shastra courses, track progress, and explore resources.">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/css/sidebar.css">
  <link rel="stylesheet" href="/css/footer.css">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(135deg, #f8f9ff 0%, #e8f0ff 100%);
      color: #1f2937;
      margin-left: 280px;
      transition: margin-left 0.3s ease;
    }
    .main-content.full {
      margin-left: 0;
    }
    .dashboard-section {
      padding: 4rem 2rem;
      max-width: 1200px;
      margin: 0 auto;
    }
    .welcome-header {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 2rem;
    }
    .welcome-header img {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      object-fit: cover;
    }
    .welcome-header h1 {
      font-size: 2rem;
      font-weight: 700;
      color: #7c3aed;
    }
    .section-title {
      font-size: 1.8rem;
      color: #7c3aed;
      margin-bottom: 1.5rem;
      font-weight: 600;
      position: relative;
    }
    .section-title::after {
      content: '';
      position: absolute;
      bottom: -5px;
      left: 0;
      width: 60px;
      height: 4px;
      background: linear-gradient(90deg, #7c3aed, #a855f7);
      border-radius: 2px;
    }
    .courses-card {
      background: white;
      border-radius: 16px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      padding: 2rem;
      margin-bottom: 2rem;
    }
    .courses-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 1.5rem;
    }
    .course-card {
      background: #f8f9ff;
      border-radius: 12px;
      padding: 1.5rem;
      transition: all 0.3s ease;
      border: 1px solid #e5e7eb;
    }
    .course-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(124, 58, 237, 0.2);
    }
    .course-card h4 {
      font-size: 1.2rem;
      color: #1f2937;
      margin-bottom: 0.5rem;
    }
    .course-card p {
      color: #6b7280;
      font-size: 0.9rem;
      margin-bottom: 0.5rem;
    }
    .course-card .progress-bar {
      height: 6px;
      background: #e5e7eb;
      border-radius: 3px;
      overflow: hidden;
      margin-bottom: 1rem;
    }
    .course-card .progress-fill {
      height: 100%;
      background: linear-gradient(90deg, #7c3aed, #a855f7);
      transition: width 0.3s ease;
    }
    .course-card .status-pending {
      color: #f59e0b;
      font-weight: 600;
    }
    .course-card .status-approved {
      color: #10b981;
      font-weight: 600;
    }
    .course-card .course-btn {
      background: linear-gradient(135deg, #7c3aed, #a855f7);
      color: white;
      padding: 0.6rem 1.2rem;
      border: none;
      border-radius: 10px;
      font-size: 0.9rem;
      font-weight: 600;
      text-decoration: none;
      display: inline-block;
      transition: all 0.3s ease;
    }
    .course-card .course-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(124, 58, 237, 0.3);
    }
    .info-card {
      background: white;
      border-radius: 16px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      padding: 2rem;
      margin-bottom: 2rem;
      display: flex;
      gap: 2rem;
      flex-wrap: wrap;
    }
    .info-item {
      flex: 1;
      min-width: 200px;
      text-align: center;
    }
    .info-item i {
      font-size: 2rem;
      color: #7c3aed;
      margin-bottom: 0.5rem;
    }
    .info-item h3 {
      font-size: 1.2rem;
      color: #1f2937;
      margin-bottom: 0.5rem;
    }
    .info-item p {
      color: #6b7280;
      font-size: 0.9rem;
    }
    @media (max-width: 768px) {
      body {
        margin-left: 0;
      }
      .dashboard-section {
        padding: 3rem 1rem;
      }
      .welcome-header h1 {
        font-size: 1.5rem;
      }
      .courses-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>
  <%- include('./partials/sidebar') %>
  <main class="main-content" id="main-content">
    <section class="dashboard-section">
      <% if (user) { %>
        <div class="welcome-header">
          <img src="<%= user.profileImage || '/images/default-avatar.jpg' %>" alt="User Avatar">
          <h1>Welcome, <%= user.name %>!</h1>
        </div>
        <div class="info-card">
          <div class="info-item">
            <i class="fas fa-book"></i>
            <h3>Active Courses</h3>
            <p id="active-courses">0</p>
          </div>
          <div class="info-item">
            <i class="fas fa-code"></i>
            <h3>Challenges Completed</h3>
            <p id="challenges">0</p>
          </div>
          <div class="info-item">
            <i class="fas fa-envelope"></i>
            <h3>New Messages</h3>
            <p id="new-messages">0</p>
          </div>
        </div>
        <div class="courses-card">
          <h2 class="section-title">Your Courses</h2>
          <div class="courses-grid" id="purchased-courses">
            <!-- Populated by JS -->
          </div>
        </div>
        <div class="courses-card">
          <h2 class="section-title">Recommended Courses</h2>
          <div class="courses-grid" id="recommended-courses">
            <!-- Populated by JS -->
          </div>
        </div>
      </div>
      <% } else { %>
        <p>Please <a href="/signup?redirect=/dashboard">log in</a> to access the dashboard.</p>
      <% } %>
    </section>
    <%- include('./partials/footer') %>
  </main>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const user = JSON.parse(localStorage.getItem('user') || '{}');
      if (!user.name || !user.email) {
        alert('Please log in to access the dashboard.');
        window.location.href = '/signup?redirect=/dashboard';
        return;
      }

      // Update main content margin
      const sidebar = document.querySelector('.sidebar');
      const mainContent = document.querySelector('.main-content');
      if (sidebar && mainContent) {
        if (sidebar.classList.contains('hidden')) {
          mainContent.classList.add('full');
        }
        sidebar.addEventListener('transitionend', () => {
          mainContent.classList.toggle('full', sidebar.classList.contains('hidden'));
        });
      }

      // Fetch purchased courses
      fetch('/api/enrollments', {
        credentials: 'include'
      })
        .then(response => {
          if (!response.ok) {
            if (response.status === 401) {
              localStorage.removeItem('user');
              window.location.href = '/signup?redirect=/dashboard';
            }
            throw new Error('Failed to load courses');
          }
          return response.json();
        })
        .then(data => {
          const purchasedCourses = document.getElementById('purchased-courses');
          const activeCourses = document.querySelector('#active-courses');
          if (data.enrollments && data.enrollments.length) {
            purchasedCourses.innerHTML = data.enrollments.map(enrollment => `
              <div class="course-card">
                <h4>${enrollment.course}</h4>
                <p>Status: <span class="status-${enrollment.status.toLowerCase()}">${enrollment.status}</span></p>
                <div class="progress-bar">
                  <div class="progress-fill" style="width: ${Math.floor(Math.random() * 50)}%"></div>
                </div>
                <a href="/dashboard/courses?course=${enrollment.course}" class="course-btn">View Course</a>
              </div>
            `).join('');
            activeCourses.textContent = data.enrollments.filter(e => e.status === 'approved').length;
          } else {
            purchasedCourses.innerHTML = '<p>No courses enrolled yet.</p>';
            activeCourses.textContent = '0';
          }
        })
        .catch(error => {
          console.error('Error loading purchased courses:', error);
          document.getElementById('purchased-courses').innerHTML = '<p>Failed to load courses.</p>';
        });

      // Mock recommended courses (replace with real API later)
      const mockRecommendedCourses = [
        { id: 1, title: 'Frontend Development', description: 'Learn React, HTML, CSS.', duration: '6 weeks' },
        { id: 2, title: 'Digital Marketing', description: 'Master SEO, PPC, and social media.', duration: '4 weeks' },
        { id: 3, title: 'Data Science', description: 'Explore Python, Pandas, and ML.', duration: '8 weeks' }
      ];
      const recommendedCourses = document.getElementById('recommended-courses');
      recommendedCourses.innerHTML = mockRecommendedCourses.map(course => `
        <div class="course-card">
          <h4>${course.title}</h4>
          <p>${course.description}</p>
          <p>Duration: ${course.duration}</p>
          <a href="/payment?course=${course.title}" class="course-btn">Enroll Now</a>
        </div>
      `).join('');
    });
  </script>
  <script src="/js/sidebar.js"></script>
</body>
</html>